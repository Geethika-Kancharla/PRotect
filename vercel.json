{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/api/github/webhooks",
      "dest": "/api/github/webhooks",
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "X-GitHub-Event, X-GitHub-Delivery, X-Hub-Signature, X-Hub-Signature-256, Content-Type",
        "Access-Control-Expose-Headers": "X-GitHub-Event, X-GitHub-Delivery, X-Hub-Signature, X-Hub-Signature-256"
      }
    }
  ],
  "env": {
    "APP_ID": "@app_id",
    "WEBHOOK_SECRET": "@webhook_secret",
    "PRIVATE_KEY": "@private_key"
  }
} 